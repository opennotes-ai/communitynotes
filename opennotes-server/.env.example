ENVIRONMENT=development
DEBUG=true

PROJECT_NAME=OpenNotes API
VERSION=1.0.0

SERVER_HOST=0.0.0.0
SERVER_PORT=8000

CORS_ORIGINS=http://localhost:3000,http://localhost:5173

DATABASE_URL=postgresql+asyncpg://opennotes:opennotes_password@localhost:5432/opennotes
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=true

NATS_URL=nats://localhost:4222
NATS_MAX_RECONNECT_ATTEMPTS=60

JWT_SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

RATE_LIMIT_ENABLED=true
RATE_LIMIT_NEWCOMER_REQUESTS_PER_DAY=5
RATE_LIMIT_CONTRIBUTOR_REQUESTS_PER_DAY=10
RATE_LIMIT_TRUSTED_REQUESTS_PER_DAY=20
RATE_LIMIT_GENERAL_REQUESTS_PER_HOUR=100

LOG_LEVEL=INFO
LOG_FORMAT=json

SENTRY_DSN=

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@opennotes.ai
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@opennotes.ai

TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

VERIFICATION_CODE_EXPIRE_MINUTES=15
VERIFICATION_CODE_LENGTH=6

SCORING_SCHEDULE_CRON=0 */6 * * *
SCORING_ENABLED=true

WORKER_ENABLED=true
WORKER_CONCURRENCY=4
